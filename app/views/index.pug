extends layout/layout

block vars
	-title = 'Bee Bee'
	-bodyClass = 'home-page'
	-page= 'home'
	-pageName= 'Home'

block container
	.main-content.py-0
		.container-fluid 
			.row.flex-xl-nowrap.justify-content-xl-between 	
				.col-12.col-xl-auto.menu-section
					.sidebar-left
						include ./blocks/navbar
						.menu-support 
							a(href="#!" class="support-chat")
								img(src="./images/dev-support-icon.png", alt="") 
							.support-socials 
								a(href="#!")
									i.fa-brands.fa-telegram
								a(href="#!")
									i.fa-brands.fa-medium
								a(href="#!")
									i.fa-brands.fa-twitter
							.support-languagues 
								ul#myTab.nav.nav-tabs(role='tablist')
									li.nav-item(role='presentation')
										button(class="w-100 nav-link active" data-toggle='tab') English
									li.nav-item(role='presentation')
										button(class="w-100 nav-link" data-toggle='tab') Chinese

				.home-page-section
					a(href="#!" class="home-snip-btn")  
						i.ti.ti-viewfinder
						p 
							| SNIP 
							span BLOCK-O 
							| NOW
