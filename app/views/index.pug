extends layout/layout

block vars
	-title = 'Bee Bee'
	-bodyClass = 'home-page'
	-page= 'home'
	-pageName= 'Home'

block container
	.main-content.py-0
		.container-fluid 
			.row.flex-xl-nowrap.justify-content-xl-between 	
				.col-12.col-xl-auto.menu-section
					.sidebar-left
						include ./blocks/navbar
						.menu-support 
							a(href="#!" class="support-chat")
								img(src="./images/dev-support-icon.png", alt="Dev Support") 
							.support-socials 
								a(href="#!")
									img(src="./images/telegram-icon.png", width="20" alt="icon")
								a(href="#!")
									img(src="./images/twitter-icon.png", width="20" alt="icon")
								a(href="#!")
									img(src="./images/medium-icon.png", width="20" alt="icon")
							.support-languagues 
								ul#myTab.nav.nav-tabs(role='tablist')
									li.nav-item(role='presentation')
										button(class="w-100 nav-link active" data-toggle='tab') English
									li.nav-item(role='presentation')
										button(class="w-100 nav-link" data-toggle='tab') Chinese

				.home-page-section
					.home-banner 
						.home-banner-title 
							h2 Easily Snipe At 
								span Block-0
							h1 ON SOLANA
						a(href="#!" class="home-banner-btn")  
							i.ti.ti-viewfinder
							p 
								| SNIP 
								span BLOCK-O 
								| NOW
						.support-socials.d-xl-none 
							a(href="#!")
								img(src="./images/telegram-icon.png", width="20" alt="icon")
							a(href="#!")
								img(src="./images/twitter-icon.png", width="20" alt="icon")
							a(href="#!")
								img(src="./images/medium-icon.png", width="20" alt="icon")